// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


generator client {
  provider = "prisma-client-js"
}


model Customer {
  id       Int    @id @default(autoincrement())
  name     String
  email    String
  password String
}

model Seller {
  id       Int        @id @default(autoincrement())
  name     String
  email    String
  password String
  products Products[]
}

model Products {
  id          Int     @id @default(autoincrement())
  seller      Seller? @relation(fields: [sellerId], references: [id])
  sellerId    Int
  title       String
  description String
  type        String
}

